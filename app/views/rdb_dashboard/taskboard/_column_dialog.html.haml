%div
  %div.rdb-card.rdb-card-dialog
    %div{:class => "rdb-priority rdb-priority-#{@issue.priority.position}" }
      %header.rdb-card-header
        %span.rdb-card-title
          = link_to "#{@board.abbreviation}#{@issue.id}", @issue

        %div.rdb-card-property.rdb-card-tracker= @issue.tracker

        - if @issue.done_ratio.between?(1,99)
          %span.rdb-card-progress-percent= @issue.done_ratio

      %div.rdb-card-progress
        %div.rdb-card-progress-bar{:style => "width: #{@issue.done_ratio}%;" }

      %div.rdb-card-content
        %div.rdb-card-subject.rdb-property-subject= @issue.subject

      %div.rdb-card-dialog-box.rdb-async
        %label=t :rdb_dialog_update_issue_status
        %ul
          - @statuses.each do |status|
            %li
              = link_to status.name, rdb_update_path(@issue, :status => status.id)
